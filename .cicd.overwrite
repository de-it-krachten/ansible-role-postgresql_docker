# Molecule
molecule:
  requirements:
    roles_extra:
      - deitkrachten.facts
  prepare:
    roles:
      - deitkrachten.facts
  converge:
    vars:
      postgresql_database: db1
      postgresql_username: user1
      postgresql_password: password1
